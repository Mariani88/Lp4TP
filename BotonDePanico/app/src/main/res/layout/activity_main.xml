<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="lenguajes4.botondepanico.ProcesoDeActivacionActivity"
    android:background="@drawable/fondo_gradiente"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MODO DE PRUEBA ACTIVADO"
        android:visibility="invisible"
        android:id="@+id/campoTipoDeUso"
        android:textSize="15dp"/>

    <Button
        android:id="@+id/botonAlertarContacto"
        android:text="Alertar Contacto"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/boton_circular"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/vistaBotonRojoChico"
        android:layout_alignStart="@+id/vistaBotonRojoChico"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/vistaBotonRojoGrande"
        android:layout_above="@+id/button3"
        android:layout_gravity="right"
/>



    <Button
        android:id="@+id/botonAlertarAmigos"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/boton_circular"
        android:textSize="20dp"
        android:layout_alignLeft="@+id/vistaBotonRojoChico"
        android:layout_alignStart="@+id/vistaBotonRojoChico"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/vistaBotonRojoGrande"
        android:layout_above="@+id/button3"
        android:text="Alertar lista de Amigos"/>

    <TextView
        android:layout_width="202dp"
        android:layout_height="37dp"
        android:gravity="center"
        android:id="@+id/alertarListaDeAmigosTextView" />

</LinearLayout>
